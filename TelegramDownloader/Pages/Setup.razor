@page "/setup"
@layout SetupLayout
@using TelegramDownloader.Services
@using TelegramDownloader.Models
@using TelegramDownloader.Data
@using TelegramDownloader.Data.db
@inject ISetupService SetupService
@inject ITelegramService TelegramService
@inject IDbService DbService
@inject ILogQueryService LogQueryService
@inject NavigationManager NavigationManager
@inject ILogger<Setup> Logger

<div class="setup-container">
    <div class="setup-card">
        <div class="setup-header">
            <img src="/img/logo.png" alt="TelegramFileManager" class="setup-logo" onerror="this.style.display='none'" />
            <h1>TelegramFileManager Setup</h1>
            <p class="setup-subtitle">Configure your application to get started</p>
        </div>

        <div class="setup-progress">
            <div class="progress-step @(currentStep >= 1 ? "active" : "") @(currentStep > 1 ? "completed" : "")">
                <div class="step-number">1</div>
                <div class="step-label">Database</div>
            </div>
            <div class="progress-line @(currentStep > 1 ? "completed" : "")"></div>
            <div class="progress-step @(currentStep >= 2 ? "active" : "") @(currentStep > 2 ? "completed" : "")">
                <div class="step-number">2</div>
                <div class="step-label">Telegram</div>
            </div>
            <div class="progress-line @(currentStep > 2 ? "completed" : "")"></div>
            <div class="progress-step @(currentStep >= 3 ? "active" : "")">
                <div class="step-number">3</div>
                <div class="step-label">Complete</div>
            </div>
        </div>

        <div class="setup-content">
            @if (currentStep == 1)
            {
                <div class="step-content">
                    <h2><i class="bi bi-database me-2"></i>MongoDB Connection</h2>
                    <p class="step-description">
                        TelegramFileManager requires a MongoDB database to store your files and configuration.
                        Please provide the connection string to your MongoDB instance.
                    </p>

                    @if (!string.IsNullOrEmpty(mongoError))
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @mongoError
                        </div>
                    }

                    <div class="form-group">
                        <label for="mongoConnection">Connection String</label>
                        <input type="text" id="mongoConnection" class="form-control"
                               @bind="mongoConnectionString" @bind:event="oninput"
                               placeholder="mongodb://localhost:27017" />
                        <small class="form-text text-muted">
                            Example: mongodb://localhost:27017 or mongodb://user:password@host:27017
                        </small>
                    </div>

                    <div class="form-actions">
                        <button class="btn btn-primary btn-lg" @onclick="TestAndSaveMongo" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Testing connection...</span>
                            }
                            else
                            {
                                <span>Test & Continue</span>
                                <i class="bi bi-arrow-right ms-2"></i>
                            }
                        </button>
                    </div>
                </div>
            }
            else if (currentStep == 2)
            {
                <div class="step-content">
                    <h2><i class="bi bi-telegram me-2"></i>Telegram API Credentials</h2>
                    <p class="step-description">
                        To connect to Telegram, you need API credentials from
                        <a href="https://my.telegram.org/apps" target="_blank">my.telegram.org</a>.
                    </p>

                    <div class="info-box">
                        <h4><i class="bi bi-info-circle me-2"></i>How to get your credentials:</h4>
                        <ol>
                            <li>Go to <a href="https://my.telegram.org/apps" target="_blank">my.telegram.org/apps</a></li>
                            <li>Log in with your phone number</li>
                            <li>Create a new application if you don't have one</li>
                            <li>Copy the <strong>api_id</strong> and <strong>api_hash</strong></li>
                        </ol>
                    </div>

                    @if (!string.IsNullOrEmpty(telegramError))
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @telegramError
                        </div>
                    }

                    <div class="form-group">
                        <label for="apiId">API ID</label>
                        <input type="text" id="apiId" class="form-control"
                               @bind="apiId" @bind:event="oninput"
                               placeholder="12345678" />
                    </div>

                    <div class="form-group">
                        <label for="apiHash">API Hash</label>
                        <input type="text" id="apiHash" class="form-control"
                               @bind="apiHash" @bind:event="oninput"
                               placeholder="0123456789abcdef0123456789abcdef" />
                    </div>

                    <div class="form-actions">
                        <button class="btn btn-outline-secondary" @onclick="GoBack" disabled="@isLoading">
                            <i class="bi bi-arrow-left me-2"></i>Back
                        </button>
                        <button class="btn btn-primary btn-lg" @onclick="TestAndSaveTelegram" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Validating...</span>
                            }
                            else
                            {
                                <span>Save & Continue</span>
                                <i class="bi bi-arrow-right ms-2"></i>
                            }
                        </button>
                    </div>
                </div>
            }
            else if (currentStep == 3)
            {
                <div class="step-content setup-complete">
                    <div class="success-icon">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <h2>Setup Complete!</h2>
                    <p class="step-description">
                        Your TelegramFileManager is now configured and ready to use.
                        Click the button below to start using the application.
                    </p>

                    <div class="config-summary">
                        <h4>Configuration Summary</h4>
                        <div class="summary-item">
                            <i class="bi bi-database text-success"></i>
                            <span>MongoDB: Connected</span>
                        </div>
                        <div class="summary-item">
                            <i class="bi bi-telegram text-success"></i>
                            <span>Telegram API: Configured</span>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button class="btn btn-success btn-lg" @onclick="FinishSetup">
                            <i class="bi bi-rocket-takeoff me-2"></i>
                            Launch Application
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

