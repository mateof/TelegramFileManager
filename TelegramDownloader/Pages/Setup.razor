@code {
    private int currentStep = 1;
    private bool isLoading = false;

    private string mongoConnectionString = "";
    private string mongoError = "";

    private string apiId = "";
    private string apiHash = "";
    private string telegramError = "";

    protected override void OnInitialized()
    {
        // Check current setup status using cached/sync method
        var status = SetupService.GetCachedStatus();

        // Pre-fill existing values if available
        mongoConnectionString = GeneralConfigStatic.tlconfig?.mongo_connection_string
            ?? Environment.GetEnvironmentVariable("connectionString")
            ?? "mongodb://localhost:27017";

        apiId = GeneralConfigStatic.tlconfig?.api_id
            ?? Environment.GetEnvironmentVariable("api_id")
            ?? "";

        apiHash = GeneralConfigStatic.tlconfig?.hash_id
            ?? Environment.GetEnvironmentVariable("hash_id")
            ?? "";

        // Set initial step based on status
        switch (status.CurrentStep)
        {
            case SetupStep.MongoDbRequired:
                currentStep = 1;
                if (!string.IsNullOrEmpty(status.MongoDbError))
                {
                    mongoError = status.MongoDbError;
                }
                break;
            case SetupStep.TelegramRequired:
                currentStep = 2;
                break;
            case SetupStep.Complete:
                // Redirect to home if setup is already complete
                NavigationManager.NavigateTo("/", forceLoad: true);
                break;
        }
    }

    private async Task TestAndSaveMongo()
    {
        mongoError = "";
        isLoading = true;
        StateHasChanged();

        try
        {
            var result = await SetupService.TestMongoConnection(mongoConnectionString);

            if (result.Success)
            {
                await SetupService.SaveConfiguration(mongoConnectionString, null, null);

                // Reinitialize DbService with the new connection string
                try
                {
                    DbService.ReinitializeConnection(mongoConnectionString);
                    LogQueryService.ReinitializeConnection(mongoConnectionString);

                    // Load configuration from database now that connection is available
                    await GeneralConfigStatic.Load(DbService);
                    Logger.LogInformation("Configuration loaded from database after setup");
                }
                catch (Exception ex)
                {
                    Logger.LogError(ex, "Failed to reinitialize database connection");
                    mongoError = $"Connection verified but failed to initialize service: {ex.Message}";
                    return;
                }

                // Reconfigure Serilog to use MongoDB now that connection is verified
                SetupService.ReconfigureSerilogWithMongo(mongoConnectionString);

                currentStep = 2;
            }
            else
            {
                mongoError = result.Error ?? "Unknown error occurred";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error testing MongoDB connection");
            mongoError = $"Unexpected error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task TestAndSaveTelegram()
    {
        telegramError = "";
        isLoading = true;
        StateHasChanged();

        try
        {
            var result = await SetupService.TestTelegramCredentials(apiId, apiHash);

            if (result.Success)
            {
                await SetupService.SaveConfiguration(null, apiId, apiHash);

                // Initialize Telegram client with the new credentials
                try
                {
                    TelegramService.InitializeClient();
                }
                catch (Exception ex)
                {
                    Logger.LogError(ex, "Failed to initialize Telegram client");
                    telegramError = $"Credentials saved but failed to initialize client: {ex.Message}";
                    return;
                }

                // Mark setup as complete so navigation works properly
                SetupService.MarkSetupComplete();
                currentStep = 3;
            }
            else
            {
                telegramError = result.Error ?? "Unknown error occurred";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error validating Telegram credentials");
            telegramError = $"Unexpected error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void GoBack()
    {
        if (currentStep > 1)
        {
            currentStep--;
        }
    }

    private void FinishSetup()
    {
        NavigationManager.NavigateTo("/", forceLoad: true);
    }
}
