@using TelegramDownloader.Models
@using TelegramDownloader.Services

<style>
    .download-info-modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(4px);
        z-index: 1050;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
    }

    .download-info-modal-overlay.show {
        opacity: 1;
        visibility: visible;
    }

    .download-info-modal-container {
        width: 100%;
        max-width: 500px;
        margin: 1rem;
        background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
        border-radius: 1rem;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        overflow: hidden;
        transform: scale(0.9) translateY(20px);
        transition: transform 0.3s ease;
    }

    .download-info-modal-overlay.show .download-info-modal-container {
        transform: scale(1) translateY(0);
    }

    .download-info-modal-header {
        background: linear-gradient(135deg, #0f3460 0%, #1a1a2e 100%);
        padding: 1rem 1.25rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .download-info-modal-title {
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
    }

    .download-info-modal-title i {
        color: #4facfe;
    }

    .download-info-modal-close {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        border: none;
        background: rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .download-info-modal-close:hover {
        background: rgba(79, 172, 254, 0.3);
        color: #fff;
        transform: rotate(90deg);
    }

    .download-info-modal-body {
        padding: 1.25rem;
    }

    /* Progress Section */
    .download-info-progress-section {
        background: rgba(0,0,0,0.2);
        border-radius: 0.75rem;
        padding: 1rem;
        margin-bottom: 1rem;
    }

    .download-info-progress-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
    }

    .download-info-progress-percent {
        font-size: 1.5rem;
        font-weight: 700;
        color: #4facfe;
    }

    .download-info-progress-bar {
        height: 8px;
        background: rgba(255,255,255,0.1);
        border-radius: 4px;
        overflow: hidden;
        margin-bottom: 0.5rem;
    }

    .download-info-progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
        border-radius: 4px;
        transition: width 0.3s ease;
    }

    .download-info-progress-fill.completed {
        background: linear-gradient(90deg, #28a745 0%, #5dd879 100%);
    }

    .download-info-progress-fill.error {
        background: linear-gradient(90deg, #dc3545 0%, #ff6b6b 100%);
    }

    .download-info-progress-details {
        display: flex;
        justify-content: space-between;
        font-size: 0.8rem;
        color: rgba(255,255,255,0.6);
    }

    /* File Info */
    .download-info-file-info {
        background: rgba(79, 172, 254, 0.1);
        border: 1px solid rgba(79, 172, 254, 0.2);
        border-radius: 0.75rem;
        padding: 1rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .download-info-file-icon {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .download-info-file-icon i {
        font-size: 1.5rem;
        color: white;
    }

    .download-info-file-details {
        flex: 1;
        min-width: 0;
    }

    .download-info-file-name {
        color: white;
        font-weight: 500;
        font-size: 0.95rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-bottom: 0.25rem;
    }

    .download-info-file-path {
        color: rgba(255,255,255,0.5);
        font-size: 0.8rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Info Grid */
    .download-info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.75rem;
    }

    .download-info-item {
        background: rgba(255,255,255,0.05);
        border-radius: 0.5rem;
        padding: 0.75rem;
    }

    .download-info-item.full-width {
        grid-column: span 2;
    }

    .download-info-label {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        color: rgba(255,255,255,0.5);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.25rem;
    }

    .download-info-label i {
        font-size: 0.875rem;
        color: #4facfe;
    }

    .download-info-value {
        color: white;
        font-weight: 500;
        font-size: 0.9rem;
    }

    /* State Badge */
    .download-state-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .download-state-badge.completed {
        background: rgba(40, 167, 69, 0.2);
        color: #5dd879;
    }

    .download-state-badge.working {
        background: rgba(79, 172, 254, 0.2);
        color: #4facfe;
    }

    .download-state-badge.error {
        background: rgba(220, 53, 69, 0.2);
        color: #ff6b6b;
    }

    .download-state-badge.canceled {
        background: rgba(255, 193, 7, 0.2);
        color: #ffc107;
    }

    .download-state-badge.pending {
        background: rgba(108, 117, 125, 0.2);
        color: #adb5bd;
    }

    .download-state-badge.paused {
        background: rgba(23, 162, 184, 0.2);
        color: #17a2b8;
    }

    .download-state-badge i {
        font-size: 0.75rem;
    }

    /* Responsive */
    @@media (max-width: 576px) {
        .download-info-modal-overlay {
            align-items: stretch;
        }

        .download-info-modal-container {
            max-width: 100%;
            width: 100%;
            height: 100%;
            margin: 0;
            border-radius: 0;
            display: flex;
            flex-direction: column;
        }

        .download-info-modal-body {
            flex: 1;
            overflow-y: auto;
            padding-bottom: 2rem;
        }

        .download-info-grid {
            grid-template-columns: 1fr;
        }

        .download-info-item.full-width {
            grid-column: span 1;
        }
    }
</style>

<div class="download-info-modal-overlay @(isVisible ? "show" : "")" @onclick="OnOverlayClick">
    <div class="download-info-modal-container" @onclick:stopPropagation="true">
        <div class="download-info-modal-header">
            <h5 class="download-info-modal-title">
                <i class="bi bi-cloud-arrow-down"></i>
                Download Details
            </h5>
            <button class="download-info-modal-close" @onclick="HideModal">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        @if (downloadModel != null)
        {
            <div class="download-info-modal-body">
                <!-- Progress Section -->
                <div class="download-info-progress-section">
                    <div class="download-info-progress-header">
                        <div class="download-info-progress-status">
                            <span class="download-state-badge @GetStateClass(downloadModel.state)">
                                <i class="bi @GetStateIcon(downloadModel.state)"></i>
                                @downloadModel.state
                            </span>
                        </div>
                        <span class="download-info-progress-percent">@downloadModel.progress%</span>
                    </div>
                    <div class="download-info-progress-bar">
                        <div class="download-info-progress-fill @GetProgressClass(downloadModel.state)"
                             style="width: @downloadModel.progress%"></div>
                    </div>
                    <div class="download-info-progress-details">
                        <span>@downloadModel._transmittedString / @downloadModel._sizeString</span>
                        <span>@GetAverageSpeed()</span>
                    </div>
                </div>

                <!-- File Info -->
                <div class="download-info-file-info">
                    <div class="download-info-file-icon">
                        <i class="bi @GetFileIcon(downloadModel.name)"></i>
                    </div>
                    <div class="download-info-file-details">
                        <div class="download-info-file-name" title="@downloadModel.name">@downloadModel.name</div>
                        <div class="download-info-file-path" title="@downloadModel.path">@downloadModel.path</div>
                    </div>
                </div>

                <!-- Info Grid -->
                <div class="download-info-grid">
                    <div class="download-info-item">
                        <div class="download-info-label">
                            <i class="bi bi-chat"></i>
                            Channel
                        </div>
                        <div class="download-info-value">@(downloadModel.channelName ?? "-")</div>
                    </div>

                    <div class="download-info-item">
                        <div class="download-info-label">
                            <i class="bi bi-stopwatch"></i>
                            Duration
                        </div>
                        <div class="download-info-value">@GetDuration()</div>
                    </div>

                    <div class="download-info-item">
                        <div class="download-info-label">
                            <i class="bi bi-calendar-plus"></i>
                            Created
                        </div>
                        <div class="download-info-value">@downloadModel.creationDate.ToString("dd/MM/yy HH:mm")</div>
                    </div>

                    <div class="download-info-item">
                        <div class="download-info-label">
                            <i class="bi bi-play-circle"></i>
                            Started
                        </div>
                        <div class="download-info-value">@(downloadModel.startDate != default ? downloadModel.startDate.ToString("dd/MM/yy HH:mm") : "-")</div>
                    </div>

                    @if (downloadModel.state == StateTask.Completed && downloadModel.endnDate != default)
                    {
                        <div class="download-info-item full-width">
                            <div class="download-info-label">
                                <i class="bi bi-check-circle"></i>
                                Completed
                            </div>
                            <div class="download-info-value">@downloadModel.endnDate.ToString("dd/MM/yy HH:mm:ss")</div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public DownloadModel downloadModel { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    private bool isVisible = false;

    public async Task ShowModal(DownloadModel downloadModel)
    {
        this.downloadModel = downloadModel;
        if (this.downloadModel != null)
        {
            isVisible = true;
            StateHasChanged();
        }
    }

    private async Task HideModal()
    {
        isVisible = false;
        StateHasChanged();

        if (OnClose.HasDelegate)
        {
            await OnClose.InvokeAsync();
        }
    }

    private async Task OnOverlayClick()
    {
        await HideModal();
    }

    private string GetDuration()
    {
        if (downloadModel.startDate == default)
            return "-";

        DateTime endTime = downloadModel.state == StateTask.Completed && downloadModel.endnDate != default
            ? downloadModel.endnDate
            : DateTime.Now;

        TimeSpan duration = endTime - downloadModel.startDate;

        if (duration.TotalHours >= 1)
            return $"{(int)duration.TotalHours}h {duration.Minutes}m {duration.Seconds}s";
        if (duration.TotalMinutes >= 1)
            return $"{duration.Minutes}m {duration.Seconds}s";
        return $"{duration.Seconds}s";
    }

    private string GetAverageSpeed()
    {
        if (downloadModel.startDate == default || downloadModel._transmitted == 0)
            return "-";

        DateTime endTime = downloadModel.state == StateTask.Completed && downloadModel.endnDate != default
            ? downloadModel.endnDate
            : DateTime.Now;

        double seconds = (endTime - downloadModel.startDate).TotalSeconds;
        if (seconds <= 0)
            return "-";

        double bytesPerSecond = downloadModel._transmitted / seconds;
        return $"{HelperService.SizeSuffix((long)bytesPerSecond)}/s";
    }

    private string GetStateClass(StateTask state)
    {
        return state switch
        {
            StateTask.Completed => "completed",
            StateTask.Working => "working",
            StateTask.Error => "error",
            StateTask.Canceled => "canceled",
            StateTask.Pending => "pending",
            StateTask.Paused => "paused",
            _ => "pending"
        };
    }

    private string GetStateIcon(StateTask state)
    {
        return state switch
        {
            StateTask.Completed => "bi-check-circle-fill",
            StateTask.Working => "bi-arrow-repeat",
            StateTask.Error => "bi-x-circle-fill",
            StateTask.Canceled => "bi-slash-circle",
            StateTask.Pending => "bi-clock",
            StateTask.Paused => "bi-pause-circle",
            _ => "bi-circle"
        };
    }

    private string GetProgressClass(StateTask state)
    {
        return state switch
        {
            StateTask.Completed => "completed",
            StateTask.Error => "error",
            _ => ""
        };
    }

    private string GetFileIcon(string fileName)
    {
        if (string.IsNullOrEmpty(fileName))
            return "bi-file-earmark";

        var extension = System.IO.Path.GetExtension(fileName)?.ToLower();
        return extension switch
        {
            ".mp3" or ".wav" or ".flac" or ".aac" or ".ogg" => "bi-file-earmark-music",
            ".mp4" or ".avi" or ".mkv" or ".mov" or ".wmv" => "bi-file-earmark-play",
            ".jpg" or ".jpeg" or ".png" or ".gif" or ".bmp" or ".webp" => "bi-file-earmark-image",
            ".pdf" => "bi-file-earmark-pdf",
            ".doc" or ".docx" => "bi-file-earmark-word",
            ".xls" or ".xlsx" => "bi-file-earmark-excel",
            ".zip" or ".rar" or ".7z" or ".tar" or ".gz" => "bi-file-earmark-zip",
            ".txt" or ".md" => "bi-file-earmark-text",
            ".exe" or ".msi" => "bi-file-earmark-binary",
            _ => "bi-file-earmark"
        };
    }
}
