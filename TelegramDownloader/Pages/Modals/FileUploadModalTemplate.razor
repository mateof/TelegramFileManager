@* Styles moved to site.css *@
<div class="upload-modal-overlay" :class="{ modalshow: showModal, modalhide: !showModal }" v-if="showModal">
    <div class="upload-modal-container" v-on:click.stop>
        <div class="upload-modal-header">
            <h5 class="upload-modal-title">
                <i class="bi bi-cloud-arrow-up"></i>
                Upload Files
            </h5>
            <button class="upload-modal-close" v-on:click="closeModal()">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        <div class="upload-modal-body">
            <!-- Drop Zone -->
            <div class="upload-drop-zone"
                 v-on:click="$refs.files.click()"
                 v-on:dragover.prevent="onDragOver"
                 v-on:dragleave="onDragLeave"
                 v-on:drop.prevent="onDrop"
                 :class="{ dragover: isDragging }">
                <div class="upload-drop-icon">
                    <i class="bi bi-cloud-arrow-up"></i>
                </div>
                <div class="upload-drop-text">Drop files here or click to browse</div>
                <div class="upload-drop-hint">Supports any file type</div>
                <input type="file"
                       class="upload-drop-input"
                       id="filesInput"
                       ref="files"
                       v-on:change="onChangeFileUpload()"
                       multiple />
            </div>

            <!-- File List -->
            <div class="upload-file-list" v-if="files.length > 0">
                <div class="upload-file-item"
                     v-for="fileItem in files"
                     :key="fileItem.file.name"
                     :class="{ completed: fileItem.completed }">
                    <div class="upload-file-header">
                        <div class="upload-file-icon">
                            <i class="bi" :class="getFileIcon(fileItem.file.name)"></i>
                        </div>
                        <div class="upload-file-info">
                            <div class="upload-file-name" :title="fileItem.file.name">{{ fileItem.file.name }}</div>
                            <div class="upload-file-size">{{ bytes(fileItem.file.size) }}</div>
                        </div>
                        <button class="upload-file-remove"
                                v-on:click="deleteFile(fileItem.file.name)"
                                v-if="!fileItem.completed"
                                title="Remove file">
                            <i class="bi bi-x"></i>
                        </button>
                    </div>
                    <div class="upload-file-progress">
                        <div class="upload-file-progress-bar" :style="{ width: fileItem.progress + '%' }"></div>
                    </div>
                    <div class="upload-file-status">
                        <span class="upload-file-percent" v-if="!fileItem.completed">{{ fileItem.progress }}%</span>
                        <span class="upload-completed-badge" v-else>
                            <i class="bi bi-check-circle-fill"></i>
                            Completed
                        </span>
                        <span class="upload-file-bytes">{{ bytesProgress(fileItem.sended) }} / {{ bytes(fileItem.file.size) }}</span>
                    </div>
                </div>
            </div>

            <!-- Empty State -->
            <div class="upload-empty-state" v-else>
                <i class="bi bi-inbox" style="font-size: 2rem; display: block; margin-bottom: 0.5rem; opacity: 0.5;"></i>
                No files selected
            </div>
        </div>

        <div class="upload-modal-footer">
            <button class="upload-btn upload-btn-secondary" v-on:click="closeModal()">
                <i class="bi bi-x-lg"></i>
                Close
            </button>
            <button class="upload-btn upload-btn-primary"
                    v-on:click="submitForm()"
                    :disabled="files.length === 0 || isUploading">
                <i class="bi bi-cloud-arrow-up"></i>
                {{ isUploading ? 'Uploading...' : 'Upload' }}
            </button>
        </div>
    </div>
</div>

