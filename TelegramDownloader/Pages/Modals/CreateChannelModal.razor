@using TelegramDownloader.Data
@using TL
@inject ITelegramService ts
@inject ILogger<CreateChannelModal> Logger

@if (showModal)
{
    <div class="create-channel-modal-overlay @(showModal ? "show" : "")" @onclick="Close">
        <div class="create-channel-modal-container" @onclick:stopPropagation="true">
            <div class="create-channel-modal-header">
                <div class="create-channel-modal-title">
                    <i class="bi bi-broadcast"></i>
                    <span>Create New Channel</span>
                </div>
                <button type="button" class="create-channel-modal-close" @onclick="Close" disabled="@isCreating">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <div class="create-channel-modal-body">
                @if (!isCreating && createdChannel == null)
                {
                    <div class="create-channel-form">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="bi bi-type"></i>
                                Channel Name <span class="required">*</span>
                            </label>
                            <input type="text"
                                   class="form-control create-channel-input"
                                   @bind="channelTitle"
                                   @bind:event="oninput"
                                   placeholder="Enter channel name..."
                                   maxlength="128" />
                            <small class="form-hint">@channelTitle.Length / 128 characters</small>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="bi bi-card-text"></i>
                                Description
                            </label>
                            <textarea class="form-control create-channel-textarea"
                                      @bind="channelAbout"
                                      @bind:event="oninput"
                                      placeholder="Enter channel description (optional)..."
                                      rows="4"
                                      maxlength="255"></textarea>
                            <small class="form-hint">@channelAbout.Length / 255 characters</small>
                        </div>

                        <div class="create-channel-info">
                            <i class="bi bi-info-circle"></i>
                            <span>The channel will be created as a private broadcast channel. You can change settings later in Telegram.</span>
                        </div>
                    </div>
                }

                @if (isCreating)
                {
                    <div class="create-channel-loading">
                        <div class="create-channel-loading-icon">
                            <i class="bi bi-broadcast spinning"></i>
                        </div>
                        <div class="create-channel-loading-text">Creating channel...</div>
                        <div class="create-channel-loading-hint">Please wait while we set up your new channel</div>
                    </div>
                }

                @if (createdChannel != null)
                {
                    <div class="create-channel-success">
                        <div class="create-channel-success-icon">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div class="create-channel-success-title">Channel Created!</div>
                        <div class="create-channel-success-name">@createdChannel.Title</div>
                        <div class="create-channel-success-hint">Your channel is ready to use</div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="create-channel-error">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <span>@errorMessage</span>
                    </div>
                }
            </div>

            <div class="create-channel-modal-footer">
                @if (createdChannel != null)
                {
                    <button type="button" class="create-channel-btn create-channel-btn-success" @onclick="CloseAndRefresh">
                        <i class="bi bi-check-lg"></i>
                        <span>Done</span>
                    </button>
                }
                else
                {
                    <button type="button" class="create-channel-btn create-channel-btn-secondary" @onclick="Close" disabled="@isCreating">
                        <i class="bi bi-x-lg"></i>
                        <span>Cancel</span>
                    </button>
                    <button type="button"
                            class="create-channel-btn create-channel-btn-primary"
                            @onclick="CreateChannel"
                            disabled="@(isCreating || string.IsNullOrWhiteSpace(channelTitle))">
                        <i class="bi bi-plus-lg"></i>
                        <span>Create Channel</span>
                    </button>
                }
            </div>
        </div>
    </div>
}

<style>
