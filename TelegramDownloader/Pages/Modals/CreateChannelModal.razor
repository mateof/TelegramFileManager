    .create-channel-loading-text {
        color: white;
        font-size: 1.1rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .create-channel-loading-hint {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.9rem;
    }

    .create-channel-success {
        text-align: center;
        padding: 2rem 1rem;
    }

    .create-channel-success-icon {
        font-size: 3.5rem;
        color: #22c55e;
        margin-bottom: 1rem;
    }

    .create-channel-success-title {
        color: white;
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .create-channel-success-name {
        color: #e94560;
        font-size: 1.1rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .create-channel-success-hint {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.9rem;
    }

    .create-channel-error {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem;
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-radius: 0.5rem;
        color: #ef4444;
        font-size: 0.9rem;
        margin-top: 1rem;
    }

    .create-channel-modal-footer {
        display: flex;
        justify-content: flex-end;
        gap: 0.75rem;
        padding: 1rem 1.5rem;
        background: rgba(0, 0, 0, 0.2);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .create-channel-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.625rem 1.25rem;
        border-radius: 0.5rem;
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        border: none;
    }

    .create-channel-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .create-channel-btn-secondary {
        background: rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .create-channel-btn-secondary:hover:not(:disabled) {
        background: rgba(255, 255, 255, 0.15);
        color: white;
    }

    .create-channel-btn-primary {
        background: linear-gradient(135deg, #e94560 0%, #c73659 100%);
        color: white;
    }

    .create-channel-btn-primary:hover:not(:disabled) {
        background: linear-gradient(135deg, #f05e78 0%, #d94a6d 100%);
        transform: translateY(-1px);
    }

    .create-channel-btn-success {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        color: white;
    }

    .create-channel-btn-success:hover:not(:disabled) {
        background: linear-gradient(135deg, #34d36f 0%, #1fb855 100%);
    }

    .spinning {
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    @@keyframes pulse {
        0%, 100% { opacity: 1; transform: scale(1); }
        50% { opacity: 0.7; transform: scale(1.05); }
    }
</style>

@code {
    [Parameter]
    public EventCallback OnChannelCreated { get; set; }

    private bool showModal = false;
    private bool isCreating = false;
    private string channelTitle = "";
    private string channelAbout = "";
    private string errorMessage = "";
    private Channel? createdChannel = null;

    public void Open()
    {
        showModal = true;
        channelTitle = "";
        channelAbout = "";
        errorMessage = "";
        createdChannel = null;
        isCreating = false;
        StateHasChanged();
    }

    public void Close()
    {
        if (!isCreating)
        {
            showModal = false;
            StateHasChanged();
        }
    }

    private async Task CloseAndRefresh()
    {
        showModal = false;
        if (OnChannelCreated.HasDelegate)
        {
            await OnChannelCreated.InvokeAsync();
        }
        StateHasChanged();
    }

    private async Task CreateChannel()
    {
        if (string.IsNullOrWhiteSpace(channelTitle))
        {
            errorMessage = "Channel name is required";
            return;
        }

        isCreating = true;
        errorMessage = "";
        StateHasChanged();

        try
        {
            createdChannel = await ts.CreateChannel(channelTitle.Trim(), channelAbout.Trim());

            if (createdChannel == null)
            {
                errorMessage = "Failed to create channel. Please try again.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error creating channel");
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isCreating = false;
            StateHasChanged();
        }
    }
}
