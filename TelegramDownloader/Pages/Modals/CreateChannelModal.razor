        transform: scale(1);
    }

    .create-channel-modal-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.25rem 1.5rem;
        background: rgba(0, 0, 0, 0.2);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .create-channel-modal-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
