@inject IJSRuntime JS


@code {

    [Parameter]
    public string id { get; set; }
    public string filePath { get; set; }
    public string url { get; set; }
    public bool ShowBackdrop = false;
    public string ModalDisplay = "none;";
    public string ModalClass = "";

    public async Task Open()
    {
        
        ModalDisplay = "block;";
        ModalClass = "Show";
        ShowBackdrop = true;

        StateHasChanged();
        await JS.InvokeVoidAsync("openFileUploadModal", id, filePath, url);

    }

    public void Close()
    {
        ModalDisplay = "none";
        ModalClass = "";
        ShowBackdrop = false;
        StateHasChanged();
    }
}
