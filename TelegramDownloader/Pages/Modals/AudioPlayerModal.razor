    private async Task UpdateProgressLoop(CancellationToken token)
    {
        while (!token.IsCancellationRequested && !_disposed)
        {
            try
            {
                if (_disposed) break;
                await UpdateProgress();
                if (_disposed) break;
                await InvokeAsync(StateHasChanged);
                await Task.Delay(500, token);
