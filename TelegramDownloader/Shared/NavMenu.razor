@using TelegramDownloader.Data
@using TL
@using TelegramDownloader.Data.db
@using TelegramDownloader.Models
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage ProtectedSessionStore
@inject NavigationManager uriHelper;
@inject IDbService db;
@inject IFileService fs;
@inject ITelegramService ts;
@inject IJSRuntime JS;

<style>
    /* Sidebar Container */
    .sidebar-nav {
        background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
        min-height: 100%;
    }

    /* Header */
    .sidebar-header {
        background: linear-gradient(135deg, #0f3460 0%, #1a1a2e 100%);
        padding: 1rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        flex-shrink: 0;
    }

    .sidebar-brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: white;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .sidebar-brand:hover {
        color: #e94560;
    }

    .sidebar-brand img {
        height: 2rem;
        width: auto;
    }

    .sidebar-toggler {
        background: rgba(255,255,255,0.1);
        border: none;
        color: white;
        width: 36px;
        height: 36px;
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .sidebar-toggler:hover {
        background: rgba(233, 69, 96, 0.3);
    }

    /* Collapse behavior */
    @@media (max-width: 2048px) {
        .sidebar-nav {
            height: auto;
            min-height: auto;
        }

        .sidebar-content {
            display: none;
        }

        .sidebar-content.show {
            display: block;
        }

        .sidebar-channel-list {
            max-height: calc(100vh - 250px) !important;
            overflow-y: auto !important;
        }

        .sidebar-toggler {
            display: flex !important;
        }
    }

    @@media (min-width: 2049px) {
        .sidebar-content {
            display: block !important;
        }

        .sidebar-channel-list {
            max-height: calc(100vh - 200px) !important;
            overflow-y: auto !important;
        }

        .sidebar-toggler {
            display: none !important;
        }
    }

    /* Action Bar */
    .sidebar-actions {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        background: rgba(0,0,0,0.2);
        border-bottom: 1px solid rgba(255,255,255,0.05);
        flex-shrink: 0;
    }

    .sidebar-action-btn {
        width: 36px;
        height: 36px;
        border-radius: 0.5rem;
        border: 1px solid rgba(255,255,255,0.15);
        background: transparent;
        color: rgba(255,255,255,0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 1rem;
    }

    .sidebar-action-btn:hover {
        background: rgba(233, 69, 96, 0.2);
        border-color: rgba(233, 69, 96, 0.4);
        color: #e94560;
    }

    .sidebar-action-btn.active {
        background: rgba(233, 69, 96, 0.3);
        border-color: #e94560;
        color: #e94560;
    }

    /* Search */
    .sidebar-search {
        padding: 0.75rem 1rem;
        background: rgba(0,0,0,0.15);
        border-bottom: 1px solid rgba(255,255,255,0.05);
        flex-shrink: 0;
    }

    .sidebar-search-input {
        width: 100%;
        background: rgba(255,255,255,0.08);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 0.5rem;
        padding: 0.625rem 1rem 0.625rem 2.5rem;
        color: white;
        font-size: 0.875rem;
        transition: all 0.2s ease;
    }

    .sidebar-search-input::placeholder {
        color: rgba(255,255,255,0.4);
    }

    .sidebar-search-input:focus {
        outline: none;
        border-color: rgba(233, 69, 96, 0.5);
        background: rgba(255,255,255,0.12);
    }

    .sidebar-search-wrapper {
        position: relative;
    }

    .sidebar-search-wrapper i {
        position: absolute;
        left: 0.875rem;
        top: 50%;
        transform: translateY(-50%);
        color: rgba(255,255,255,0.4);
        font-size: 0.875rem;
    }

    /* Tabs */
    .sidebar-tabs {
        background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
    }

    .sidebar-tabs :deep(.nav-tabs) {
        border: none;
        background: rgba(0,0,0,0.2);
        padding: 0.5rem 0.75rem;
        gap: 0.25rem;
        display: flex;
        flex-wrap: nowrap;
    }

    .sidebar-tabs :deep(.nav-tabs .nav-link) {
        border: none;
        border-radius: 0.5rem;
        color: rgba(255,255,255,0.6);
        font-size: 0.8rem;
        padding: 0.5rem 0.75rem;
        background: transparent;
        transition: all 0.2s ease;
        white-space: nowrap;
    }

    .sidebar-tabs :deep(.nav-tabs .nav-link:hover) {
        color: white;
        background: rgba(255,255,255,0.1);
    }

    .sidebar-tabs :deep(.nav-tabs .nav-link.active) {
        background: linear-gradient(135deg, #e94560 0%, #c73659 100%);
        color: white;
    }

    .sidebar-tabs :deep(.nav-tabs .nav-link i) {
        margin-right: 0.375rem;
    }

    .sidebar-tabs :deep(.tab-content) {
        background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
        padding: 0;
    }

    /* Channel List */
    .sidebar-channel-list {
        padding: 0.5rem;
        background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
        min-height: 200px;
    }

    .sidebar-channel-list::-webkit-scrollbar {
        width: 6px;
    }

    .sidebar-channel-list::-webkit-scrollbar-track {
        background: rgba(255,255,255,0.05);
    }

    .sidebar-channel-list::-webkit-scrollbar-thumb {
        background: rgba(233, 69, 96, 0.3);
        border-radius: 3px;
    }

    .sidebar-channel-list::-webkit-scrollbar-thumb:hover {
        background: rgba(233, 69, 96, 0.5);
    }

    /* Channel Item */
    .channel-item {
        display: flex;
        align-items: center;
        padding: 0.625rem 0.75rem;
        border-radius: 0.5rem;
        margin-bottom: 0.25rem;
        transition: all 0.2s ease;
        gap: 0.625rem;
    }

    .channel-item:hover {
        background: rgba(255,255,255,0.08);
    }

    .channel-item-star {
        color: rgba(255,255,255,0.3);
        cursor: pointer;
        font-size: 0.875rem;
        transition: all 0.2s ease;
        flex-shrink: 0;
    }

    .channel-item-star:hover {
        color: #ffc107;
        transform: scale(1.2);
    }

    .channel-item-star.active {
        color: #ffc107;
    }

    .channel-item-content {
        flex: 1;
        min-width: 0;
    }

    .channel-item-link {
        color: rgba(255,255,255,0.85);
        text-decoration: none;
        display: block;
        font-size: 0.875rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        transition: color 0.2s ease;
    }

    .channel-item-link:hover {
        color: #e94560;
    }

    .channel-item-link.active {
        color: #e94560;
        font-weight: 500;
    }

    .channel-item-actions {
        display: flex;
        gap: 0.25rem;
        opacity: 0.3;
        transition: opacity 0.2s ease;
        flex-shrink: 0;
    }

    .channel-item:hover .channel-item-actions {
        opacity: 1;
    }

    .channel-action-btn {
        width: 28px;
        height: 28px;
        border-radius: 0.375rem;
        border: none;
        background: rgba(255,255,255,0.1);
        color: rgba(255,255,255,0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 0.8rem;
    }

    .channel-action-btn:hover {
        background: rgba(233, 69, 96, 0.3);
        color: white;
    }

    /* Shared Tab Buttons */
    .shared-actions {
        display: flex;
        gap: 0.5rem;
        padding: 0.75rem;
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }

    .shared-action-btn {
        flex: 1;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        border: 1px solid rgba(255,255,255,0.2);
        background: transparent;
        color: rgba(255,255,255,0.8);
        font-size: 0.8rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .shared-action-btn:hover {
        background: rgba(233, 69, 96, 0.2);
        border-color: rgba(233, 69, 96, 0.4);
        color: white;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 2rem 1rem;
        color: rgba(255,255,255,0.4);
    }

    .empty-state i {
        font-size: 2.5rem;
        margin-bottom: 0.75rem;
        display: block;
    }

    /* Delete button for shared */
    .channel-item-delete {
        color: rgba(255,255,255,0.3);
        cursor: pointer;
        font-size: 0.875rem;
        transition: all 0.2s ease;
        flex-shrink: 0;
    }

    .channel-item-delete:hover {
        color: #dc3545;
        transform: scale(1.2);
    }
</style>

<div class="sidebar-nav">
    <!-- Header -->
    <div class="sidebar-header">
        <a class="sidebar-brand" href="/fetchdata">
            <img src="/favicon.ico" alt="Logo" />
            <span>TelegramFileManager</span>
        </a>
        <button class="sidebar-toggler" @onclick="ToggleNavMenu" title="Toggle menu">
            <i class="bi @(collapseNavMenu ? "bi-list" : "bi-x-lg")"></i>
        </button>
    </div>

    <!-- Collapsible Content -->
    <div class="sidebar-content @(collapseNavMenu ? "" : "show")">
        <!-- Action Buttons -->
        <div class="sidebar-actions">
            <button class="sidebar-action-btn @(showSearch ? "active" : "")" @onclick="ToggleSearch" title="Search">
                <i class="bi bi-search"></i>
            </button>
            <button class="sidebar-action-btn" @onclick="RefreshChannels" title="Refresh channels">
                <i class="bi bi-arrow-clockwise"></i>
            </button>
            <button class="sidebar-action-btn" @onclick="showPlayer" title="Audio Player">
                <i class="bi bi-music-note-beamed"></i>
            </button>
            <button class="sidebar-action-btn" @onclick="HandleThreeDots" title="More options">
                <i class="bi bi-three-dots-vertical"></i>
            </button>
        </div>

        <!-- Search -->
        @if (showSearch)
        {
            <div class="sidebar-search">
                <div class="sidebar-search-wrapper">
                    <i class="bi bi-search"></i>
                    <input type="text"
                           class="sidebar-search-input"
                           @ref="searchInput"
                           @bind="searchString"
                           @bind:event="onchange"
                           @bind:after="searchChat"
                           placeholder="Search channels..." />
                </div>
            </div>
        }

        <!-- Tabs -->
        <div class="sidebar-tabs">
            <Tabs EnableFadeEffect="true" @ref="tabs" Id="menutab" OnShowing="@(args => OnTabShowingAsync(args))">
                <Tab Active="true" Title="Mine" Name="Mine">
                    <TitleTemplate>
                        <i class="bi bi-heart-fill"></i> Mine
                    </TitleTemplate>
                    <Content>
                        <div class="sidebar-channel-list">
                            @if (mineChats.Count == 0)
                            {
                                <div class="empty-state">
                                    <i class="bi bi-inbox"></i>
                                    <div>No channels found</div>
                                </div>
                            }
                            else
                            {
                                @foreach (ChatViewBase cb in mineChats)
                                {
                                    <div class="channel-item" @onclick="ToggleNavMenu">
                                        <span class="channel-item-star @(isInFavourite(cb.chat.ID) ? "active" : "")"
                                              @onclick="async () => await ToggleStar(cb.chat.ID)"
                                              @onclick:stopPropagation="true">
                                            <i class="bi @(isInFavourite(cb.chat.ID) ? "bi-star-fill" : "bi-star")"></i>
                                        </span>
                                        <div class="channel-item-content">
                                            <NavLink class="channel-item-link" href="@($"/fm/{cb.chat.ID}")" Match="NavLinkMatch.All">
                                                @cb.chat.Title
                                            </NavLink>
                                        </div>
                                        <div class="channel-item-actions">
                                            @if (GeneralConfigStatic.config.ShouldShowPaginatedFileChannel)
                                            {
                                                <button class="channel-action-btn" @onclick="@(async () => await goTo($"/filegrid/{cb.chat.ID}"))" @onclick:stopPropagation="true" title="Grid view">
                                                    <i class="bi bi-grid-3x3"></i>
                                                </button>
                                            }
                                            <button class="channel-action-btn" @onclick="@(async () => await goTo($"/fetchdata/{cb.chat.ID}"))" @onclick:stopPropagation="true" title="Chat view">
                                                <i class="bi bi-chat-left-text"></i>
                                            </button>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </Content>
                </Tab>

                <Tab Title="Fav" Name="Fav">
                    <TitleTemplate>
                        <i class="bi bi-star-fill"></i> Fav
                    </TitleTemplate>
                    <Content>
                        <div class="sidebar-channel-list">
                            @if (favouriteChats.Count == 0)
                            {
                                <div class="empty-state">
                                    <i class="bi bi-star"></i>
                                    <div>No favourites yet</div>
                                </div>
                            }
                            else
                            {
                                @foreach (ChatViewBase cb in favouriteChats)
                                {
                                    <div class="channel-item" @onclick="ToggleNavMenu">
                                        <span class="channel-item-star active"
                                              @onclick="async () => await removeStar(cb.chat.ID)"
                                              @onclick:stopPropagation="true">
                                            <i class="bi bi-star-fill"></i>
                                        </span>
                                        <div class="channel-item-content">
                                            <NavLink class="channel-item-link" href="@($"/fm/{cb.chat.ID}")" Match="NavLinkMatch.All">
                                                @cb.chat.Title
                                            </NavLink>
                                        </div>
                                        <div class="channel-item-actions">
                                            @if (GeneralConfigStatic.config.ShouldShowPaginatedFileChannel)
                                            {
                                                <button class="channel-action-btn" @onclick="@(async () => await goTo($"/filegrid/{cb.chat.ID}"))" @onclick:stopPropagation="true" title="Grid view">
                                                    <i class="bi bi-grid-3x3"></i>
                                                </button>
                                            }
                                            <button class="channel-action-btn" @onclick="@(async () => await goTo($"/fetchdata/{cb.chat.ID}"))" @onclick:stopPropagation="true" title="Chat view">
                                                <i class="bi bi-chat-left-text"></i>
                                            </button>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </Content>
                </Tab>

                <Tab Title="Shared" Name="Shared">
                    <TitleTemplate>
                        <i class="bi bi-share-fill"></i> Shared
                    </TitleTemplate>
                    <Content>
                        <div class="shared-actions">
                            <button class="shared-action-btn" @onclick="HandleImportMenu">
                                <i class="bi bi-cloud-upload"></i>
                                Import
                            </button>
                        </div>
                        <div class="sidebar-channel-list">
                            @if (sharedChats.Count == 0)
                            {
                                <div class="empty-state">
                                    <i class="bi bi-share"></i>
                                    <div>No shared channels</div>
                                </div>
                            }
                            else
                            {
                                @foreach (BsonSharedInfoModel sc in sharedChats)
                                {
                                    <div class="channel-item" @onclick="ToggleNavMenu">
                                        <span class="channel-item-delete"
                                              @onclick="async () => await removeShared(sc.Id, sc.CollectionId)"
                                              @onclick:stopPropagation="true"
                                              title="Remove">
                                            <i class="bi bi-trash"></i>
                                        </span>
                                        <div class="channel-item-content">
                                            <NavLink class="channel-item-link" href="@($"/shared/{sc.Id}")" Match="NavLinkMatch.All">
                                                @sc.Name
                                            </NavLink>
                                        </div>
                                        <div class="channel-item-actions">
                                            <button class="channel-action-btn" @onclick="@(async () => await goTo($"/shared/{sc.Id}"))" @onclick:stopPropagation="true" title="Open">
                                                <i class="bi bi-folder2-open"></i>
                                            </button>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </Content>
                </Tab>

                <Tab Title="All" Name="All">
                    <TitleTemplate>
                        <i class="bi bi-collection-fill"></i> All
                    </TitleTemplate>
                    <Content>
                        <div class="sidebar-channel-list">
                            @if (sChats.Count == 0)
                            {
                                <div class="empty-state">
                                    <i class="bi bi-inbox"></i>
                                    <div>No channels found</div>
                                </div>
                            }
                            else
                            {
                                @foreach (ChatViewBase cb in sChats)
                                {
                                    <div class="channel-item" @onclick="ToggleNavMenu">
                                        <span class="channel-item-star @(isInFavourite(cb.chat.ID) ? "active" : "")"
                                              @onclick="async () => await ToggleStar(cb.chat.ID)"
                                              @onclick:stopPropagation="true">
                                            <i class="bi @(isInFavourite(cb.chat.ID) ? "bi-star-fill" : "bi-star")"></i>
                                        </span>
                                        <div class="channel-item-content">
                                            <NavLink class="channel-item-link" href="@($"/fm/{cb.chat.ID}")" Match="NavLinkMatch.All">
                                                @cb.chat.Title
                                            </NavLink>
                                        </div>
                                        <div class="channel-item-actions">
                                            @if (GeneralConfigStatic.config.ShouldShowPaginatedFileChannel)
                                            {
                                                <button class="channel-action-btn" @onclick="@(async () => await goTo($"/filegrid/{cb.chat.ID}"))" @onclick:stopPropagation="true" title="Grid view">
                                                    <i class="bi bi-grid-3x3"></i>
                                                </button>
                                            }
                                            <button class="channel-action-btn" @onclick="@(async () => await goTo($"/fetchdata/{cb.chat.ID}"))" @onclick:stopPropagation="true" title="Chat view">
                                                <i class="bi bi-chat-left-text"></i>
                                            </button>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </Content>
                </Tab>
            </Tabs>
        </div>
    </div>
</div>

@code {
    [Inject] protected PreloadService PreloadService { get; set; } = default!;

    [Parameter] public EventCallback OnClickCallback { get; set; }
    [Parameter] public EventCallback OnClickOpenImportCallback { get; set; }
    [Parameter] public EventCallback<bool> OnCollapseChanged { get; set; }

    Tabs tabs = default!;

    private List<ChatViewBase> sChats = new List<ChatViewBase>();
    private List<ChatViewBase> allChats = new List<ChatViewBase>();
    private List<ChatViewBase> mineChats = new List<ChatViewBase>();
    private List<BsonSharedInfoModel> sharedChats = new List<BsonSharedInfoModel>();
    private List<ChatViewBase> favouriteChats = new List<ChatViewBase>();
    private string searchString = "";
    private bool collapseNavMenu = true;
    private bool showSearch = false;
    private ElementReference searchInput;

    private async Task ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
        if (OnCollapseChanged.HasDelegate)
        {
            await OnCollapseChanged.InvokeAsync(collapseNavMenu);
        }
    }

    private async Task ToggleSearch()
    {
        if (showSearch)
        {
            searchString = "";
            showSearch = false;
            await OnInitializedAsync();
            StateHasChanged();
        }
        else
        {
            showSearch = true;
            StateHasChanged();
            await Task.Delay(50);
            await searchInput.FocusAsync();
        }
    }

    private async Task OnTabShowingAsync(TabsEventArgs args)
    {
        try
        {
            await ProtectedSessionStore.SetAsync("tabmenu", args.ActiveTabTitle);
        }
        catch (Exception) { }
    }

    private async Task getActiveTab()
    {
        try
        {
            var tab = await ProtectedSessionStore.GetAsync<string>("tabmenu");
            if (!tab.Success || string.IsNullOrEmpty(tab.Value))
            {
                await tabs.ShowTabByNameAsync("Mine");
            }
            else
            {
                await tabs.ShowTabByNameAsync(tab.Value);
            }
        }
        catch (Exception) { }
    }

    private async Task removeShared(string id, string collecionId)
    {
        PreloadService.Show(SpinnerColor.Light, "Deleting shared...");
        await fs.DeleteShared(id, collecionId);
        await OnInitializedAsync();
        PreloadService.Hide();
    }

    private async Task HandleThreeDots()
    {
        ToggleNavMenu();
        if (OnClickCallback.HasDelegate)
        {
            await OnClickCallback.InvokeAsync(null);
        }
    }

    private async Task HandleImportMenu()
    {
        ToggleNavMenu();
        if (OnClickOpenImportCallback.HasDelegate)
        {
            await OnClickOpenImportCallback.InvokeAsync(null);
        }
    }

    public async Task RefreshChannels()
    {
        PreloadService.Show(SpinnerColor.Light, "Loading data...");
        allChats = await ts.getAllChats();
        await OnInitializedAsync();
        PreloadService.Hide();
    }

    public async Task goTo(string route)
    {
        uriHelper.NavigateTo(route, forceLoad: true, replace: false);
    }

    public async Task searchChat()
    {
        await OnInitializedAsync();
        StateHasChanged();
    }

    private async Task ToggleStar(long id)
    {
        if (isInFavourite(id))
        {
            await removeStar(id);
        }
        else
        {
            await setStar(id);
        }
    }

    private async Task setStar(long id)
    {
        await ts.AddFavouriteChannel(id);
        await OnInitializedAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task removeStar(long id)
    {
        await ts.RemoveFavouriteChannel(id);
        await OnInitializedAsync();
        await InvokeAsync(StateHasChanged);
    }

    private bool isInFavourite(long id)
    {
        return GeneralConfigStatic.config.FavouriteChannels.Contains(id);
    }

    private async Task showPlayer()
    {
        await JS.InvokeVoidAsync("openAudioModal", "");
        ToggleNavMenu();
    }

    private void filterChats()
    {
        if (!string.IsNullOrEmpty(searchString))
        {
            sChats = allChats.Where(x => x.chat.Title.ToLower().Contains(searchString.ToLower())).ToList();
        }
        else
        {
            sChats = allChats.ToList();
        }
        filterMyChats(searchString);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await getActiveTab();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        allChats = await ts.getAllSavedChats();
        filterChats();
        favouriteChats = (await ts.GetFouriteChannels(false)).Where(x => sChats.Select(x => x.chat.ID).ToList().Contains(x.chat.ID)).ToList();
        sharedChats = await db.getSharedInfoList(filter: searchString);
        StateHasChanged();
    }

    private void filterMyChats(string? searchString = null)
    {
        mineChats = new List<ChatViewBase>();
        foreach (var chat in allChats)
        {
            if (chat.chat is Channel chat1)
            {
                if (chat1.flags.HasFlag(Channel.Flags.creator))
                {
                    if (!string.IsNullOrEmpty(searchString))
                    {
